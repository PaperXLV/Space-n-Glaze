<div class="well">
  <h4><%= product.name %>: <span style="color: green;"><%= number_to_currency product.price %></span></h4>
  <%= form_for order_item, remote: true do |f| %>
    <%= image_tag(product.image,  :class => "d-block img-fluid darken shop-img shop-border navbar-shadow") %>
    <div class="input-group">
      <%= f.number_field :quantity, value: 1, class: "form-control shop-input-border", min: 1 %>
      <div class="input-group-btn">
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.submit "Add to Cart", class: "btn btn-primary cart-button shop-button-border" %>
      </div>
    </div>
  <% end %>
</div>